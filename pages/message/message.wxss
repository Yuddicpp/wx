.component{
    width: 100%;
    position: relative;
    top: 0;
    margin: 0;
    margin-top: 5px;
    margin-bottom: 5px; 
    height: 100px;
    background-color: beige;
    
}
.photo{
    width: 70px;
    height: 70px;
    display: inline-block;
    position: absolute;
    border-radius:50%;
    border: 1px solid;
    margin: 8px;
    background: 100%;
    overflow: hidden;
    float: left;
}
.name{
    display: inline-block;
    position: absolute;
    left: 110px;
    top:40px;
    font:bolder;
    font-family: Arial, Helvetica, sans-serif;
}
