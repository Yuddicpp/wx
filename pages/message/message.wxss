.component {
  width: 100%;
  position: relative;
  top: 0;
  margin: 0;
  margin-top: 15px;
  margin-bottom: 5px;
  height: 100px;
  background-color: #ffb90f;
}
.photo {
  width: 70px;
  height: 70px;
  display: inline-block;
  position: absolute;
  border-radius: 50%;
  border: 1px solid;
  margin: 8px;
  background-image: 100%;
  overflow: hidden;
}
.name {
  display: inline-block;
  position: absolute;
  left: 110px;
  top: 40px;
  font: bolder;
  font-family: Arial, Helvetica, sans-serif;
}
.mine {
  width: 100%;
}
.text {
  margin-top: 10px;
  height: 30px;
  line-height: 30px;
  padding-left: 15px;
  border: 1px solid #ffb90f;
  background-color: #ffb90f;
  color: #fff;
  padding: 3px;
  position: relative;
}
.mark{
  position: absolute;
  background-size:100%;
  right: 15px;
  width: 15px;
  height: 15px;
  top: 8px;
}
.message{
    border: 1px solid #D3D3D3;
    border-radius:15px; 
    padding: 5px;
    margin-top: 1px;
    background-color: #ffb90f;
    color: #fff;
}
.padding{
    padding-left: 20px;
}
